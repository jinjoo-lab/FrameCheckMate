pipeline {
    agent any
    environment {
        DOCKER = 'sudo docker'
        DOCKERHUB_CREDENTIALS = credentials('sukkong')
    }

    stages {
        stage('Clone Repository') {
            steps {
                checkout scm
                echo 'Checkout'
            }
        }
        stage('Docker Login'){
            steps{
                 sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }

        stage('Build image') {
            steps {
                sh 'ls -al'
                dir('/var/jenkins_home/workspace/member-service/backend/user-service') {
                    sh 'ls -al'
                    sh 'chmod +x ./gradlew'
                    sh './gradlew build -x test'
                    sh 'docker build -t sukkong/member-service:latest .'
                    sh 'docker push sukkong/member-service'
                }
                echo 'Build image and Push f...'
            }
        }

        stage('Run New Image') {
            steps {
                sh '''
                    ssh ubuntu@ip-172-26-0-247 '
                    cd /home/ubuntu/member-service
                    docker-compose up -d
                '''
            }
        }
    }
}